<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/menuBarBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecipesItem" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/text_view_padding</item>
    </style>

    <style name="H1" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="RecipeTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/recipe_font_size</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>
